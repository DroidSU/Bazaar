<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.RECORD_AUDIO" /> <!-- Add this section -->
    <queries>
        <package android:name="com.google.android.gms" />
    </queries>

    <application
        android:name=".utils.CustomApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_bazaar_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_bazaar_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bazaar">
        <activity
            android:name=".ui.TransactionsActivity"
            android:exported="false"
            android:label="@string/title_activity_transactions"
            android:theme="@style/Theme.Bazaar" />
        <activity
            android:name=".ui.DashboardActivity"
            android:exported="false"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/Theme.Bazaar" />
        <activity
            android:name=".ui.EditProductActivity"
            android:exported="false"
            android:label="@string/title_activity_edit_product"
            android:theme="@style/Theme.Bazaar" />
        <activity
            android:name=".ui.AuthenticationActivity"
            android:exported="false"
            android:label="@string/title_activity_authentication"
            android:theme="@style/Theme.Bazaar" />
        <activity
            android:name=".ui.ProductsActivity"
            android:exported="false"
            android:label="@string/title_activity_products"
            android:theme="@style/Theme.Bazaar" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Bazaar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AddProductActivity"
            android:exported="true"
            android:theme="@style/Theme.Bazaar" />
    </application>

</manifest>